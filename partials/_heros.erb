<div class="gridster">
  <ul>
  <%
    color_id = 0
    @heros.each_with_index do |hero, idx|
      background_color = @colors[color_id]
      if color_id >= @colors.length-1
        color_id = 0
      else
        color_id = color_id + 1
      end
      # First Row
      data_row = 1
      data_col = idx+1
      # Second Row
      if idx > 6 and idx < 14
        data_row = 2
        data_col = idx-6
      end
      # Third Row
      if idx > 13 and idx < 22
        data_row = 3
        data_col = idx-13
      end
  %>
    <li data-row="<%= data_row %>" 
        data-col="<%= data_col %>" 
        data-sizex="1" 
        data-sizey="1">
      <div data-id="<%= hero %>-<%= @sex %>" 
           data-view="List" 
           data-unordered="true" 
           data-title="<%= hero.upcase %>"
           style="background-color:<%= background_color %>">
      </div>
    </li>
  <% end %>
  </ul>
</div>